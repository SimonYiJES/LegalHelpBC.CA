<article class="testimonial-node-v3">      
   <div class="testimonial-content">
      <div class="content">
         <div class="content-inner">
            <div class="left">
               <div class="avatar">{{ fields.field_testimonial_avatar.content }}</div> 
            </div>   
            <div class="right"> 
               <div class="title"><span>"</span>{{ fields.title.content }}<span>"</span></div>  
               <div class="quote">{{ fields.body.content|striptags|trim }}</div>  
               <div class="info">
                  <span class="name">{{ fields.field_testimonial_name.content }}</span>/<span class="job">{{ fields.field_testimonial_job.content }}</span>   
               </div>
            </div>
         </div>    
      </div>
   </div>
</article>
  